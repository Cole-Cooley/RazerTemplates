@model RazerTemplates.Models.AssignmentViewModel

@if (Model == null || Model.Students == null)
{
        <p>No students data available.</p>
}
else
{
    @if (Model.AccessLevel < 2)
    {
                <p>You do not have a sufficient access level to view this data.</p>
    }
    else
    {
        @if (Model.AccessLevel >= 8)
        {
                        <p>Hello Admin</p>
        }

                <table class="table">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                    @if (Model.AccessLevel >= 8)
                    {
                                    <th>Grade</th>
                    }
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var student in Model.Students)
                {
                                <tr>
                                    <td>@student.FirstName</td>
                                    <td>@student.LastName</td>
                        @if (Model.AccessLevel >= 8)
                        {
                                            <td>@student.Grade</td>
                        }
                                </tr>
                }
                    </tbody>
                </table>
    }
}
